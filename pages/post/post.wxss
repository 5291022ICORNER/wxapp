@import "post-item/post-item-template.wxss";
@import "post-item/post-view-template.wxss";

swiper, image {
  width: 100%;
  height: 600rpx;
}

.post-item {
  background: #fff;
}

.swiper-title {
  color: #fff;
  font-size: 20px;
  position: absolute;
  top: 450rpx;
  left: 40rpx;
  right: 30rpx;
}

.today-container {
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
}
.today-font{
  font-size: 28rpx;
  color: #999;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
.today-content{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-radius:10rpx;
  margin: 0 auto 10rpx;
  width: 90%;
  padding: 20rpx;
  border-bottom: 1px solid #999;
}
.today-img{
  width: 150rpx;
  height: 150rpx;
}
.today-title{
  width: 480rpx;
  margin-right: 35rpx;
}